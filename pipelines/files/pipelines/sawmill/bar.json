{
  "steps": [
    {
      "addField": {
        "config": {
          "path": "gsub",
          "value": "{{messages.gsub}}"
        },
        "onSuccess": [
          {
            "gsub": {
              "config": {
                "field": "gsub",
                "pattern": "^-",
                "replacement": ""
              }
            }
          },
          {
            "gsub": {
              "config": {
                "field": "gsub",
                "pattern": "-$",
                "replacement": ""
              }
            }
          },
          {
            "gsub": {
              "config": {
                "field": "gsub",
                "pattern": "-",
                "replacement": " "
              }
            }
          }
        ]
      }
    },
    {
      "removeField": {
        "config": {
          "fields": [
            "messages"
          ]
        }
      }
    },
    {
      "rename": {
        "config": {
          "from": "type",
          "to": "@type"
        }
      }
    }
  ]
}