{
  "steps": [
    {
      "addField": {
        "config": {
          "path": "kv",
          "value": "{{messages.kv}}"
        },
        "onSuccess": [
          {
            "kv": {
              "config": {
                "field": "kv",
                "valueSplit": ":",
                "includeKeys": [
                  "a",
                  "b"
                ]
              }
            }
          }
        ]
      }
    },
    {
      "addField": {
        "config": {
          "path": "json",
          "value": "{{messages.json}}"
        },
        "onSuccess": [
          {
            "json": {
              "config": {
                "field": "json"
              }
            }
          }
        ]
      }
    }
  ]
}