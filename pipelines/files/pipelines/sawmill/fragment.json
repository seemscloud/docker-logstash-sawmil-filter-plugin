{
  "steps": [
    {
      "rename": {
        "config": {
          "from": "message",
          "to": "@message"
        }
      }
    },
    {
      "kv": {
        "config": {
          "field": "@message",
          "fieldSplit": " ",
          "valueSplit": ":"
        },
        "onSuccess": [
          {
            "addTag": {
              "config": {
                "tags": [
                  "success/kv"
                ]
              }
            }
          }
        ],
        "onFailure": [
          {
            "addTag": {
              "config": {
                "tags": [
                  "fail/kv"
                ]
              }
            }
          }
        ]
      }
    }
  ]
}