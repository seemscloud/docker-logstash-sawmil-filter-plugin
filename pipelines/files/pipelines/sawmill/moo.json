{
  "steps": [
    {
      "addField": {
        "config": {
          "path": "messages.kv_obj",
          "value": "{{messages.kv}}"
        },
        "onSuccess": [
          {
            "kv": {
              "config": {
                "field": "messages.kv_obj",
                "valueSplit": ":",
                "targetField": "moo.kv",
                "includeKeys": [
                  "before",
                  "after"
                ]
              }
            }
          }
        ]
      }
    },
    {
      "addField": {
        "config": {
          "path": "messages.json_obj",
          "value": "{{messages.json}}"
        },
        "onSuccess": [
          {
            "json": {
              "config": {
                "field": "messages.json_obj",
                "targetField": "moo.json"
              }
            }
          }
        ]
      }
    }
  ]
}